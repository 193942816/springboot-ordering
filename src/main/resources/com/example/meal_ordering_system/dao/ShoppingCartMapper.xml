<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.meal_ordering_system.dao.ShoppingCartDao">
    <select id="getCart" resultType="com.example.meal_ordering_system.entity.ShoppingCart">
      select menus.name, menus.price, menus.sums
        from menus
        inner join orders
        on orders.menuid = menus.id
        where orders.userid = #{id}
    </select>

</mapper>